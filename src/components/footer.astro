<script>
  function updateClock() {
    let now = new Date()
    let offset = -300
    let timeInLima = new Date(now.getTime() + now.getTimezoneOffset() * 60000 + offset * 60000)
    let hours = timeInLima.getHours() as number | string
    let minutes = timeInLima.getMinutes() as number | string
    let clock = document.getElementById('clock') as HTMLDivElement

    if (hours < 10) {
      hours = '0' + hours
    }

    if (minutes < 10) {
      minutes = '0' + minutes
    }

    clock.innerHTML = hours + ':' + minutes
  }

  setInterval(updateClock, 1000)
</script>
